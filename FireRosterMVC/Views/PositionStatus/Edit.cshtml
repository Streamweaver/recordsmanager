@model FireRosterMVC.Models.PositionStatus

@{
    ViewBag.Title = "Edit" + Model.Label + " - Position Status";
}

<h2>Edit Position Status @Html.DisplayFor(model => model.Label)</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Label, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Label, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Label, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.Partial("_EditFooterPartial", new ViewDataDictionary { { "id", Model.ID } })
</div>

@section ExtraScripts {
    @Scripts.Render("~/bundles/jqueryval")
}
