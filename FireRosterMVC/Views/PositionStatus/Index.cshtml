@model IEnumerable<FireRosterMVC.Models.PositionStatus>

@{
    ViewBag.Title = "Index";
}

<h2>Position Status List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @Html.ActionLink(item.Label, "Details", new { id = item.ID })
        </td>
        <td>
            <a href="@Url.Action("Edit", "PositionStatus", new { id=item.ID })">
                <i class="glyphicon glyphicon-edit"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Delete", "PositionStatus", new { id = item.ID })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
