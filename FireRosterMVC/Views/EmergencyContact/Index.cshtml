@model IEnumerable<FireRosterMVC.Models.EmergencyContact>

@{
    ViewBag.Title = "Emergency Contact List";
}

<h2>Emergency Contact List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Relationship)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.DisplayName, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Relationship)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayNumber)
        </td>
        <td>
            @Html.Partial("_ListActionsPartial", new ViewDataDictionary { { "controller", "EmergencyContact" }, { "id", item.ID } })
        </td>
    </tr>
}

</table>
