@model IEnumerable<FireRosterMVC.Models.Location>

@{
    ViewBag.Title = "Locations";
}

<h2>Location List</h2>

<p>
    @Html.ActionLink("+ Add New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            Min #
        </th>
        <th>
            Address
        </th>
        <th>
           Phone
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumComplement)
            </td>


            <td>
                @(item.Street1)  @(item.Street2)
                @if (!string.IsNullOrWhiteSpace(item.City))
                {
                    @(item.City)@:,
                }
                @(item.State)
                @(item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayPhone)
            </td>
            <td>
                @Html.Partial("_ListActionsPartial", new ViewDataDictionary { { "controller", "Location" }, { "id", item.ID } })
            </td>
        </tr>
    }

</table>
