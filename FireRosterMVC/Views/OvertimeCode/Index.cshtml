@model IEnumerable<FireRosterMVC.Models.OvertimeCode>

@{
    ViewBag.Title = "Overtime Codes";
}

<h2>Overtime Codes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortLabel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Code, "Details", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortLabel)
            </td>
            <td>
                @if (item.Active == true)
                {
                    <i class="glyphicon glyphicon-ok-sign text-success"></i>
                }
                else
                {
                    <i class="glyphicon glyphicon-minus-sign"></i>
                }
            </td>



            <td>
                @Html.Partial("_ListActionsPartial", new ViewDataDictionary { { "controller", "OvertimeCode" }, { "id", item.ID } })
            </td>
        </tr>
    }

</table>
