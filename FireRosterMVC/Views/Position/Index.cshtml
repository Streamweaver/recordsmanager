@model IEnumerable<FireRosterMVC.Models.Position>

@{
    ViewBag.Title = "Index";
}

<h2>Position List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Staff.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HRCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReportedHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.DisplayName, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HRCode)     
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff.DisplayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReportedHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Label)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Position", new { id=item.ID })">
                <i class="glyphicon glyphicon-edit"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Delete", "Position", new { id = item.ID })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
