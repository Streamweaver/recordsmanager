@model IEnumerable<FireRosterMVC.Models.ApplicationRole>

@{
    ViewBag.Title = "User Role List";
}

<h2>User Role List</h2>

<p>
    @Html.ActionLink("+ Add Role", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.Partial("_ListActionsPartial", new ViewDataDictionary { { "controller", "RolesAdmin" }, { "id", item.Id } })
            </td>
        </tr>
    }

</table>
