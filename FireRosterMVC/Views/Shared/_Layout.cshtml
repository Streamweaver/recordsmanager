<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FireRoster</title>
    @Styles.Render("~/Content/css")
    @if (IsSectionDefined("ExtraStyles"))
    {
        @RenderSection("ExtraStyles");
    }

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Henrico FireRoster", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Staff <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a tabindex="-1" href="@Url.Action("Index", "Staff")">List</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Gallery", "Staff")">Gallery</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Create", "Staff")">+ Add New</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Position <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            @{ var now = DateTime.Now.ToString("MM/dd/yyyy"); }
                            <li><a tabindex="-1" href="@Url.Action("Index", "Position", new { period = now })">Current</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "Position")">All</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Create", "Position")">+ Add New</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Attendance
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                            <li><a tabindex="-1" href="@Url.Action("Index", "OvertimeAvailability")">Overtime Availability</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "Overtime")">Overtime Worked</a></li>
                            <li><a tabindex="-1" href="#">Leave</a></li>
                        </ul>


                    </li>

                    <li>@Html.ActionLink("Locations", "Index", "Location")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Admin
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                            <li><a tabindex="-1" href="@Url.Action("Index", "Gender")">Gender</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "Race")">Race</a></li>
                            <li class="divider"></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "CareerDevelopmentLevel")">Career Development Level</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "Rank")">Rank</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "LocationGroup")">Location Group</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "PhoneType")">Phone Type</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "PositionStatus")">Position Status</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "Skill")">Skills</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "OvertimeCode")">Overtime Code</a></li>
                            <li class="divider"></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "UsersAdmin")">Users</a></li>
                            <li><a tabindex="-1" href="@Url.Action("Index", "RolesAdmin")">Roles</a></li>
                        </ul>


                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Henrico County Division of Fire</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    @RenderSection("ExtraScripts", required: false);
</body>
</html>
