@model IEnumerable<FireRosterMVC.Models.LocationGroup>

@{
    ViewBag.Title = "Location Group List";
}

<h2>Location Group List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Label)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Label, "Details", new { id = item.ID })
        </td>
        <td>
            <a href="@Url.Action("Edit", "LocationGroup", new { id=item.ID })">
                <i class="glyphicon glyphicon-edit"></i>
                <span class="sr-only">Edit</span>
            </a>
            <a href="@Url.Action("Delete", "LocationGroup", new { id = item.ID })">
                <i class="glyphicon glyphicon-trash"></i>
                <span class="sr-only">Delete</span>
            </a>
        </td>
    </tr>
}

</table>
